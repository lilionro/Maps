<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="110dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_headPhotos"
        android:src="@drawable/default_photo"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="75dp"
        android:layout_height="75dp"

        />
    <TextView
        android:id="@+id/tv_item_user"
        android:text="姓名"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_item_user"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/information"
        android:text="信息"
        android:textSize="15dp" />
    <TextView
        android:drawableLeft="@drawable/location_black"
        android:id="@+id/tv_item_location"
        android:text="位置"
        android:textSize="12dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/help_you_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/img_item_headPhotos"
        android:layout_marginEnd="21dp"
        android:text="时间" />
    <View
        android:background="@color/gary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>

